@model List<YouTubeApiProject.Models.YouTubeVideoModel>

<style>
    body {
        background-color: #000; /* Set body background to black */
        color: #fff; /* Set text color to white for contrast */
    }

    h2 {
        margin-top: 30px; /* Space above the heading */
        color: #fff; /* White color for the heading */
    }

    .form-control {
        background-color: #222; /* Dark background for input */
        color: #fff; /* White text for input */
    }

        .form-control::placeholder {
            color: #bbb; /* Lighter gray for placeholder text */
        }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary button color */
        border: none; /* Remove border */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    .card {
        background-color: #333; /* Dark background for cards */
        border: none; /* Remove card border */
        color: #fff; /* White text for card */
        height: 100%; /* Allow cards to fill the available height */
        display: flex; /* Use flexbox for layout */
        flex-direction: column; /* Stack children vertically */
    }

        .card img {
            max-height: 200px; /* Set max height for images */
            object-fit: cover; /* Cover the card area without distortion */
        }

    .card-body {
        flex-grow: 1; /* Make body take the remaining space */
    }

    .card a {
        color: #ff0000; /* YouTube-themed red for links */
    }

        .card a:hover {
            color: #fff; /* White on hover */
        }

    .pagination .page-link {
        background-color: #555; /* Dark gray for pagination links */
        color: #fff; /* White text for pagination */
    }

        .pagination .page-link:hover {
            background-color: #007bff; /* Bootstrap primary color on hover */
            color: #fff; /* White text on hover */
        }

    .load-more {
        margin: 20px 0; /* Space around Load More button */
        text-align: center; /* Center the button */
    }
</style>

<h2>Search YouTube Videos</h2>
<form asp-action="Search" method="post" class="form-inline">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="query" placeholder="Search for videos..." value="@ViewBag.Query" required />
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@video.ThumbnailUrl" class="card-img-top" alt="@video.Title">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="https://www.youtube.com/watch?v=@video.VideoId" target="_blank" class="text-decoration-none">@video.Title</a>
                        </h5>
                        <p class="card-text">@video.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (ViewBag.PrevPageToken != null)
            {
                <li class="page-item">
                    <form asp-action="Search" method="post" style="display: inline;">
                        <input type="hidden" name="query" value="@ViewBag.Query" />
                        <input type="hidden" name="pageToken" value="@ViewBag.PrevPageToken" />
                        <button class="page-link" type="submit">Previous</button>
                    </form>
                </li>
            }
            @if (ViewBag.NextPageToken != null)
            {
                <li class="page-item">
                    <form asp-action="Search" method="post" style="display: inline;">
                        <input type="hidden" name="query" value="@ViewBag.Query" />
                        <input type="hidden" name="pageToken" value="@ViewBag.NextPageToken" />
                        <button class="page-link" type="submit">Next</button>
                    </form>
                </li>
            }
        </ul>
    </nav>

    <!-- Load More Button -->
    <div class="load-more">
        <form asp-action="Search" method="post" class="form-inline">
            <input type="hidden" name="query" value="@ViewBag.Query" />
            <input type="hidden" name="pageToken" value="@ViewBag.NextPageToken" />
            <button class="btn btn-primary" type="submit">Load More</button>
        </form>
    </div>
}
